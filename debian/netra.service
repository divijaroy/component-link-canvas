[Unit]
Description=Netra System Architecture Visualization Tool
After=network.target

[Service]
Type=simple
User=netra
Group=netra
WorkingDirectory=/usr/share/netra
ExecStart=/usr/bin/node /usr/bin/netra-server
Restart=always
RestartSec=10
Environment=NODE_ENV=production
Environment=PORT=3000

[Install]
WantedBy=multi-user.target 